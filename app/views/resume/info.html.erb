<div class="row">
  <div class="span6 offset2" >
    <%= image_tag("other.jpg") %>
  </div>
</div>

  <hr>
  <div class="alert alert-info">
    <h4> Введіть інформацію про себе: </h4>
  </div>
<hr>

<div class="row">
  <div class="span6 offset3">
<%= form_for @person,  url: wizard_path,  :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Введіть своє ім'я:", :class => 'control-label' %> 
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' , :required => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label "Введіть своє прізвище:", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' , :required => true%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Вкажіть свою стать:", :class => 'control-label' %>
    <div class="controls">
      <%#= f.text_field :sex, :class => 'text_field' , :required => true%>
      <%= f.select :sex,  options_for_select( ["Чоловіча" , "Жіноча" ], "Чоловіча")  , :required => true%>
    </div>
  </div>
  <div class="control-group" style="">
    <%= f.label "Вкажіть свій вік:", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :age, :class => '' , :style=>"width:100px;", :required => true%>
    </div>
  </div>
 
  <h5> Місце навчання </h5>
  <hr>
  <table >
    <tr>
     <td  style="width: 100px;">
      <div class="control-group">
        <%= f.label "Тип", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :school_type, :placeholder => "(школа, гімназія ..)",  :class => 'text_field' , :required => true%>
        </div>
      </div>
    </td>

    <td>
      <div class="control-group">
        <%= f.label "№", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :school_number, :placeholder => "231", :class => 'text_field' , :style=>"width:100px;",  :required => true %>
        </div>
      </div>
    </td>
    </tr>
  </table>

      <div class="control-group">
        <%= f.label "Клас", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :klass, :class => 'text_field' , :placeholder => "5A" ,  :required => true%>
        </div>
      </div>

<hr>
 

</div>
</div>
 <div class="form-actions  pagination-centered">
    <%= f.submit "Далі", :class => 'btn btn-primary btn-large ' %>
  </div>
  <% end %>

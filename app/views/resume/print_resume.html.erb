<% @person = Person.last %>
<%- model_class = Person -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Резюме" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Имя:</strong></dt>
  <dd><%= @person.first_name %></dd>
  <dt><strong>Фамилия: </strong></dt>
  <dd><%= @person.last_name %></dd>
  <dt><strong>Пол:</strong></dt>
  <dd><%= @person.sex %></dd>
  <dt><strong>№:</strong></dt>
  <dd><%= @person.school_number %></dd>
  <dt><strong>Тип:</strong></dt>
  <dd><%= @person.school_type %></dd>
  <dt><strong>Класс:</strong></dt>
  <dd><%= @person.klass %></dd>
</dl>

<div class="form-actions">
  <%#= link_to t('.back', :default => t("helpers.links.back")),
              people_path, :class => 'btn'  %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_person_path(@person), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              person_path(@person),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
            
              <%= link_to "Печать", "#" , :remote => true , :class => "btn btn-large btn-primary"%>
            </div>

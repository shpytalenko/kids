<%= render "/resume/header" %>

<% @question = Question.all[0] %>

<div class="alert alert-info">
  <h3> <%= cookies[:lang]=="ukr" ? @question.text : @question.text_rus %> </h3>
</div>
<%= form_tag("/resume/question1" , :method => :put)  do  %>
  <% @question.variants.each do |v| %>
    <label class="radio">
      <%= radio_button_tag(:variant, v.id) %>
      <h4 class="muted"> <%= cookies[:lang]=="ukr" ?  v.text : v.text_rus %> </h4>
    </label>
  <% end %>
  <hr>
  <div class="form-actions pagination-centered">
    <% if cookies[:lang] == "ukr"%>
      <%= submit_tag "Далі" , :class=> " btn btn-primary btn-large"%>
    <% else %>
      <%= submit_tag "Дальше" , :class=> " btn btn-primary btn-large"%>
    <% end %> 
  </div>
  <% end %>


<br  />


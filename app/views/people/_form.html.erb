<%= form_for @person, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sex, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sex, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dob, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :dob, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :school_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :school_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :school_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :school_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :klass, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :klass, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group"  style="display:none;">
    <%= f.label :headshot_photo, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :headshot_photo, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Сохранить", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                people_path, :class => 'btn' %>
  </div>
<% end %>

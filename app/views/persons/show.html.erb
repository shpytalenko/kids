<%- model_class = Person -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @person.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @person.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sex) %>:</strong></dt>
  <dd><%= @person.sex %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dob) %>:</strong></dt>
  <dd><%= @person.dob %></dd>
  <dt><strong><%= model_class.human_attribute_name(:school_number) %>:</strong></dt>
  <dd><%= @person.school_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:school_type) %>:</strong></dt>
  <dd><%= @person.school_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:klass) %>:</strong></dt>
  <dd><%= @person.klass %></dd>
  <dt><strong><%= model_class.human_attribute_name(:headshot_photo) %>:</strong></dt>
  <dd><%= @person.headshot_photo %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              persons_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_person_path(@person), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              person_path(@person),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

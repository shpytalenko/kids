<%= form_for @variant, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :text, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group" style="display: none;">
    <%= f.label :question_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :question_id, :class => 'number_field' %>
    </div>
  </div>

  <% for job in Job.find(:all) %>
<div>
  <%= check_box_tag "variant[job_ids][]", job.id, @variant.jobs.include?(job) %>
  <%= job.name %>
</div>
<% end %>
  <div class="form-actions">
    <%= f.submit "Сохранить", :class => 'btn btn-primary' %>
    <%= link_to "Отмена",
                variants_path, :class => 'btn' %>
  </div>
<% end %>

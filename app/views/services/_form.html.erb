<%= nested_form_for @service, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
 <%= f.fields_for :jobs , :html => {:multipart => true,  :class => 'form-horizontal' } do |job_form| %>
    
          <div class="control-group">
            
            <div class="controls">
              <%= job_form.text_field :name , :rows =>3, :style=>"width:500px;" %>
            </div>
          </div>
  <% end %>
  <p><%= f.link_to_add "Добавить профессию", :jobs  , :class=>"btn btn-mini btn-success  pull-left"%></p>
  <br>
  <br>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                services_path, :class => 'btn' %>
  </div>
<% end %>
